{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=my_database;Username=my_user;Password=my_password"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "FileLogging": {
      "Enabled": true,
      "ToFileLogLevel": "Information",
      "LogFilePath": "Logs/app.log",
      "MaxFileSizeBytes": 1048576,
      "MaxFileCount": 5
    }
  },
  "AllowedHosts": "*"
}
